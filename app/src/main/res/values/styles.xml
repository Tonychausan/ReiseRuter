<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/windowColor</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="android:tabWidgetStyle">@style/MyTabs</item>
        <item name="android:buttonStyle">@style/MyButtons</item>
    </style>

    <style name="realTimeLineTitleTextView" parent="android:Widget.Holo.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/realTimeTableTitleText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="realTimePlatformTitleTextView" parent="android:Widget.Holo.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/platformTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlaceSearchEditTextView" parent="android:Widget.Holo.EditText">
        <item name="android:background">@drawable/search_background</item>
    </style>

    <style name="ChoosePlaceEditTextView" parent="android:Widget.Holo.EditText">
    </style>

    <style name="MyTabs" parent="android:Widget.Holo.TabWidget">
        <item name="android:background">@color/actionBarColor</item>
    </style>

    <style name="MyActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/actionBarColor</item>
        <item name="background">@color/actionBarColor</item>

        <item name="android:displayOptions">showTitle</item>
        <item name="displayOptions">showTitle</item>

        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.TitleTextStyle">
        <item name="android:textColor">#E60000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyButtons" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_default_style</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="realtime_buttons" parent="android:Widget.Button">
        <item name="android:background">@drawable/realtime_button_style</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="search_buttons" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/search_button_style</item>
    </style>

    <style name="flat_buttons">
        <item name="android:background">@drawable/flat_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/flatButtonText</item>
    </style>


</resources>
